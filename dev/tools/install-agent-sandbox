import requests
import subprocess
import time

def get_latest_agent_sandbox_version():
    """Fetches the latest Agent Sandbox version from the GitHub API."""
    url = "https://api.github.com/repos/kubernetes-sigs/agent-sandbox/releases/latest"
    response = requests.get(url)
    response.raise_for_status()
    tag_name = response.json()["tag_name"]
    return tag_name.lstrip("v")

def run_command(command):
    """Runs a shell command and prints its output."""
    print(f"Running command: {" ".join(command)}")
    subprocess.run(command, check=True)

def main():
    """Installs the latest version of Agent Sandbox."""
    try:
        version = get_latest_agent_sandbox_version()
        print(f"Installing agent-sandbox version: {version}")
 
	    # kubectl apply -f https://github.com/kubernetes-sigs/agent-sandbox/releases/download/v0.1.0-rc.0/manifest.yaml
        install_command = [
            "kubectl", "apply", "-f",
            f"https://github.com/kubernetes-sigs/agent-sandbox/releases/download/v{version}/manifest.yaml"
        ]
        run_command(install_command)

        print("Waiting for 5 seconds...")
        time.sleep(5)

        kubectl_get_pods_command = ["kubectl", "get", "pods", "-n", "agent-sandbox-system"]
        run_command(kubectl_get_pods_command)

        print("Agent Sandbox installed successfully.")

    except requests.exceptions.RequestException as e:
        print(f"Error fetching Agent Sandbox version: {e}")
    except subprocess.CalledProcessError as e:
        print(f"Error executing command: {e}")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")

if __name__ == "__main__":
    main()
